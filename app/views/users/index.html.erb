<div class="container text-center">
    <h1>Listing All Users</h1>
    <% @users.each do |user| %>
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card shadow mb-3 bg-body rounded">
                                       <div class="card-body">
                        <h5 class="card-title"><%= link_to user.username, user_path(user), class: "text-success" =%></h5>
                        <p class="card-text"><%= user.email  =%></p>
                        <div class="text-center">
                            <%= link_to 'View', user_path(user), class: "btn btn-outline-success" %>
                            <%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-info" %>
                            <%= link_to 'Delete', user_path(user), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure" } %>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <small> Created <%= time_ago_in_words(user.created_at) %> ago, edited <%= time_ago_in_words(user.updated_at) %> ago
                        </small>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>
