<h2 class="text-center"><%= @user.username %></h2>

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-8 mt-4">
            <div class="card shadow mb-5 bg-body rounded">
                <div class="card-body text-center">
                    <div class="card-text"><strong>User ID:</strong> <%= @user.username =%></div>
                    <div class="card-text"><strong>Email:</strong><%= @user.email =%></div>
                    <div class="text-center mt-3">
                        <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-outline-info" %>
                        <%= link_to 'Delete', user_path(@user), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure" } %>
                    </div>
                </div>
                <div class="card-footer text-muted text-center ">
                    <small> Created <%= time_ago_in_words(@user.created_at) %> ago, edited <%= time_ago_in_words(@user.updated_at) %> ago
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
