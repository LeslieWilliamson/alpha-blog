
<div class="container">
    <div class="row justify-content-center mt-4">
        <div class="col-10">
        <%= render 'shared/errors', obj: @category %>
            <%= form_with model: @category, class: "shadow p-3 mb-3 bg-info rounded", local:true do |f| %>
                <div class="form-group row mt-4">
                    <%= f.label :name, "Category name", class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.text_field :name, class: "form-control shadow rounded mb-3", placeholder: "Enter a category name" %>
                    </div>
                </div>

                <div class="form-group text-center">
                    <%= f.submit class: "btn btn-outline-light btn-lg" %>
                </div>
            <% end %>
        </div>
        <div class="d-flex justify-content-center mb-3">
            <%= link_to '[Cancel and return to Category]', categories_path, class: "text-info" %>
        </div>
    </div>
</div>


